{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./lib",
        "sourceMap": true,
        "noImplicitAny": false,
        "module": "esnext",
        "moduleResolution": "node",
        "declaration": true,
        "target": "es5",
        "allowJs": false,
        "jsx": "react",
        "experimentalDecorators": true,
        "lib": [
            "dom",
            "scripthost",
            "esnext"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"
    ]
}