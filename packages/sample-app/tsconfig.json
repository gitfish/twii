{
    "compilerOptions": {
        "rootDir": "./src",
        "outDir": "./dist",
        "sourceMap": true,
        "noImplicitAny": false,
        "moduleResolution": "node",
        "target": "es5",
        "jsx": "react",
        "allowJs": true,
        "experimentalDecorators": true,
        "baseUrl": "./src",
        "paths": {
            "package.json": ["../package.json"]
        },
        "lib": [
            "dom",
            "es5",
            "scripthost",
            "esnext"
        ]
    },
    "include": [
        "src"
    ],
    "exclude": [
        "node_modules"    
    ]
}