{
  "name": "@twii/core",
  "version": "1.0.0",
  "license": "MIT",
  "dependencies": {
    "lodash.isfunction": "^3.0.8",
    "mobx": "^3.4.1",
    "qs": "^6.5.1",
    "roota": "^1.4.0"
  },
  "devDependencies": {
    "@types/jest": "^22.0.1",
    "del": "^3.0.0",
    "jest": "^22.1.4",
    "jsdom": "^11.5.1",
    "ts-jest": "^22.0.1",
    "typescript": "^2.6.2"
  },
  "scripts": {
    "clean": "node task/clean",
    "build": "tsc",
    "build-watch": "tsc --watch",
    "test": "jest"
  },
  "jest": {
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts?(x)",
      "!src/**/*.d.ts?(x)"
    ],
    "coverageDirectory": "__coverage__",
    "transform": {
      ".(ts|tsx)": "./node_modules/ts-jest/preprocessor.js"
    },
    "testMatch": [
      "**/__tests__/**/*Test.ts?(x)"
    ],
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "moduleDirectories": [
      "node_modules",
      "src"
    ]
  }
}